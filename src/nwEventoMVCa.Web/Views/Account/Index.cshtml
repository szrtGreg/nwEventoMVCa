@model UserProfileViewModel

<div class="row">
    <div class="col-lg-12">
        <h1>Welcome:@Model.UserViewModel.Email</h1>
        <div class="card-block">
            <h4 class="card-subtitle mb-2 text-muted">Role: @Model.UserViewModel.Role</h4>
            <h6 class="card-subtitle mb-2 text-muted">Id: @Model.UserViewModel.Id</h6>
        </div>
    </div>
</div>
@if (Model.TicketsViewModel.Count() > 0)
{
    <div class="row">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>EventId</th>
                    <th>Id</th>
                    <th>Seating</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ticket in Model.TicketsViewModel)
                {
                    <tr>
                        <td>@ticket.EventId</td>
                        <td>@ticket.Id</td>
                        <td>@ticket.Seating</td>
                        <td>
                            <a asp-action="Cancel" asp-controller="Events" asp-route-id="@ticket.EventId" title="Cancel ticket" class="btn btn-danger card-subtitle">Cancel</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}