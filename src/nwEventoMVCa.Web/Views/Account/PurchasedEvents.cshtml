@model IEnumerable<TicketViewModel>

@if (Model.Count() > 0)
{
    <div class="row">
        <div class="col-lg-12">
            <h1>My Events </h1>
                <div class="row">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>EventId</th>
                                <th>Id</th>
                                <th>Seating</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var ticket in Model)
                            {
                                <tr>
                                    <td>@ticket.EventId</td>
                                    <td>@ticket.Id</td>
                                    <td>@ticket.Seating</td>
                                    <td>
                                        <a asp-action="Cancel" asp-controller="Events" asp-route-id="@ticket.EventId" title="Cancel ticket" class="btn btn-danger card-subtitle">Cancel</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
        </div>
    </div>
}
else
{
    <p>Nie masz jeszcze zapisanych eventów</p>
}
