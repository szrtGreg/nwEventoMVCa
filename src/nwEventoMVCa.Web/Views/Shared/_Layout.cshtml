<body>
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="/">nwEventoMVCa</a>
            </div>
            <ul class="nav navbar-nav">
                <li><a asp-area="" asp-controller="events" asp-action="Index" asp-route-eventPage="1">Events</a></li>
