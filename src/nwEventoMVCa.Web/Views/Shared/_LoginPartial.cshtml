
@if (User.Identity.IsAuthenticated)
{
    <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Hello @User.Identity.Name <span class="caret"></span></a>
            <ul class="dropdown-menu">
                <li><a asp-controller="Account" asp-action="Index">My Account</a></li>
                <li><a asp-controller="Cart" asp-action="Index">Cart</a></li>
                <li><a asp-controller="Orders" asp-action="Index">Orders</a></li>
                <li><a asp-controller="Account" asp-action="PurchasedEvents">My Events</a></li>
                <li role="separator" class="divider"></li>
                <li><a asp-area="" asp-controller="Account" asp-action="Logout">Logout</a></li>
            </ul>
        </li>
    </ul>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>
            <a asp-area="" asp-controller="Account" asp-action="Login">
                <span class="glyphicon glyphicon-log-in"></span>&nbsp;Login
            </a>
        </li>
        <li>
            <a asp-area="" asp-controller="Account" asp-action="Register">
                <span class="glyphicon glyphicon-user"></span>&nbsp;Register
            </a>
        </li>
    </ul>
}
