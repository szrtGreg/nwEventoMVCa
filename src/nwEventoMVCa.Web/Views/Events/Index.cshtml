@model IEnumerable<EventViewModel>

<div class="row">
    <div class="col-lg-6">
        <a asp-area="" asp-controller="Events" asp-action="Add" class="btn btn-primary">Add Event</a>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="row">
            <div class="col-lg-12">
                <div class="list-group">
                    @foreach (var even in Model)
                    {
                        <div class="col-lg-4">
                            <div class="card">
                                <div class="card-block">
                                    <h4 class="card-title">@even.Name</h4>
                                    <h6 class="card-subtitle mb-2 text-muted">@even.Category</h6>
                                    <h6 class="card-subtitle mb-2 text-muted">Price: @even.Price</h6>
                                    <a asp-action="Update" asp-route-id="@even.Id" title="Update event" class="card-link">Update</a>
                                    <a asp-action="Details" asp-route-id="@even.Id" title="Details event" class="card-link">Details</a>
                                    <a asp-action="Delete" asp-route-id="@even.Id" title="Delete event" class="card-link">Delete</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>